{% extends 'base.html.twig' %}

{% block title 'Edition utilisateur' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user/edit.css') }}">
{% endblock %}

{% block body %}
    {% if form is defined and form != null %}
        <div class="container">
            <div id="form-content" class="col-lg-4 col-md-8 col-xs-10 offset-lg-4 offset-md-2 offset-xs-1">
                <h3>Editer mon profil</h3>
                {{ form_start(form) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary" type="submit">Valider</button><br>
                {{ form_end(form) }}
            </div>
        </div>
    {% else %}
        <div class="container">
            <div class="card card-signin" id="confirmEditUser">
                <div class="card-body">
                    <p>Les modifications ont bien été prise en compte</p>
                    <div class="spinner-grow text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <script>
                function redir(){
                    self.location.href="{{ path('app_home_home') }}";
                }
                setTimeout(redir,5000);
            </script>
        </div>
    {% endif %}
{% endblock %}